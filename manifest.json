{
  "manifest_version": 2,

  "default_locale": "en",
  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",

  "author": "Steve (Egest√©) Regester <github@egeste.net>",
  "version": "0.0.1",

  "homepage_url": "https://github.com/egeste/soundcloud-media-controls",
  "update_url": "https://github.com/egeste/soundcloud-media-controls/raw/master/updates.xml",

  "permissions": [
    "tabs",
    "http://soundcloud.com/*",
    "https://soundcloud.com/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "commands": {
    "play-pause": {
      "global": true,
      "description": "Play/Pause SoundCloud",
      "suggested_key": {
        "default": "MediaPlayPause"
      }
    },
    "next": {
      "global": true,
      "description": "Next",
      "suggested_key": {
        "default": "MediaNextTrack"
      }
    },
    "previous": {
      "global": true,
      "description": "Previous",
      "suggested_key": {
        "default": "MediaPrevTrack"
      }
    }
  }
}
